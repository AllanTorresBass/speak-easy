  "basic_concepts": {
    "definition": "Verbs are words that indicate an action, state, or process",
    "key_features": [
      "Voice - indicates whether subject performs or receives action",
      "Tense - indicates time of action",
      "Aspect - indicates duration or completion of action",
      "Mood - indicates speaker's attitude towards action"
    ]
  },
  "verb_types": [
    {
      "type": "simple_verbs",
