      "sentences": [
        "The child ran.",
        "The woman cooks.",
        "The man thought."
      ]
    },
    {
      "type": "compound_verbs",
      "definition": "Verbs formed by the combination of two or more verbs",
      "examples": ["decompose", "develop", "discover"],
      "sentences": [
        "The child decomposed.",
        "The woman got rid of the gift.",
        "The man discovered the secret."
      ]
    },
    {
      "type": "regular_verbs",
      "definition": "Verbs that follow a regular pattern when conjugated",
      "examples": ["eat", "walk", "read"],
      "sentences": [
        "The child ate an apple.",
        "The woman went to the market.",
        "The man read a book."
      ]
    },
    {
      "type": "irregular_verbs",
      "definition": "Verbs that do not follow a regular pattern when conjugated",
      "examples": ["go", "come", "do"],
      "sentences": [
        "The child went to school.",
        "The woman came home.",
        "The man did the homework."
      ]
    },
    {
      "type": "transitive_verbs",
      "definition": "Verbs that require an object to complete their meaning",
      "examples": ["eat", "buy", "read"],
      "sentences": [
        "The child ate an apple.",
        "The woman bought a dress.",
        "The man read a book."
      ]
    },
    {
      "type": "intransitive_verbs",
      "definition": "Verbs that do not require an object to complete their meaning",
      "examples": ["sleep", "sit", "walk"],
      "sentences": [
        "The child slept.",
        "The woman sat down.",
        "The man walked."
      ]
    },
    {
      "type": "active_verbs",
      "definition": "Verbs that indicate the subject performs the action",
      "examples": ["run", "cook", "think"],
      "sentences": [
        "The child ran.",
        "The woman cooks.",
        "The man thought."
      ]
    },
    {
      "type": "passive_verbs",
      "definition": "Verbs that indicate the action is performed on the subject",
      "examples": ["was hit", "was robbed", "was fired"],
      "sentences": [
        "The child was hit.",
        "The woman was robbed.",
        "The man was fired."
      ]
    }
  ],
